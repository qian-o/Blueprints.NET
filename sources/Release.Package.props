<Project>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageOutputPath>$(MSBuildThisFileDirectory)..\.nuget</PackageOutputPath>

        <!-- Package Metadata -->
        <Version>0.0.2</Version>
        <Authors>qian-o</Authors>
        <Copyright>Copyright (c) 2025 qian-o</Copyright>

        <!-- Repository Information -->
        <RepositoryType>Git</RepositoryType>
        <RepositoryUrl>https://github.com/qian-o/Blueprints.git</RepositoryUrl>

        <!-- Package Content -->
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>C#;SkiaSharp;Blueprints;Game Development;Game Engine;Graphics</PackageTags>

        <!-- Debug Symbols & Source Link -->
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release'">
        <None Include="$(MSBuildThisFileDirectory)..\LICENSE" Pack="true" PackagePath="\" />
        <None Include="$(MSBuildThisFileDirectory)..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>